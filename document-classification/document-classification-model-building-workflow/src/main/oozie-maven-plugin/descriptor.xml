<?xml version="1.0" encoding="UTF-8"?>
<oozie-maven-plugin>
	<main-project-pig>
		<scripts>
			<root>pig-main</root>
			<preserve>false</preserve>
			<target />
			<includes>
				<include>1_.*\.pig</include>
			</includes>
		</scripts>
		<macros>
			<root>pig-macros</root>
			<preserve>false</preserve>
			<target>lib/</target>
			<includes>
				<include>.*\.pig</include>
			</includes>
			<excludes>
				<exclude>1_.*\.pig</exclude>
				<exclude>2_.*\.pig</exclude>
				<exclude>GARB_.*\.pig</exclude>
			</excludes>
		</macros>
	</main-project-pig>
	<deps-project-pig>
		<all-scripts>
			<srcProject>.*document-similarity.*</srcProject>
			<root>pig-main</root>
			<preserve>false</preserve>
			<target>/</target>
			<includes>
				<include>.*\.pig</include>
			</includes>
		</all-scripts>
		<all-scripts>
			<srcProject>.*document-similarity.*</srcProject>
			<root>pig-macros</root>
			<preserve>false</preserve>
			<target>lib/</target>
			<mainDirAsDst>true</mainDirAsDst>
			<includes>
				<include>.*\.pig</include>
			</includes>
		</all-scripts>
	</deps-project-pig>
</oozie-maven-plugin>