<workflow-app xmlns="uri:oozie:workflow:0.3" name="citation-matching-wf">
    <start to="prelude"/>

    <action name="prelude">
        <fs>
            <delete path="${workingDir}"/>
            <mkdir path="${workingDir}"/>
        </fs>
        <ok to="document_extractor"/>
        <error to="fail"/>
    </action>

    <action name="document_extractor">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>pl.edu.icm.coansys.citations.jobs.</main-class>
            <arg>-fs</arg><arg>${nameNode}</arg>
            <arg>-jt</arg><arg>${jobTracker}</arg>
            <arg>${cit_inputSrcSeqFile}</arg>
            <arg>${cit_workDir}/source_entities</arg>
        </java>
        <ok to="reference_extractor"/>
        <error to="fail"/>
    </action>

    <action name="reference_extractor">
        <ok to="inner"/>
        <error to="fail"/>
    </action>

    <action name="inner">
        <sub-workflow>
            <app-path>${wf:appPath()}/inner-workflow</app-path>
            <configuration>
                <property>
                    <name>cit_workDir</name>
                    <value>${nameNode}${workingDir}/inner-workflow</value>
                </property>
                <property>
                    <name>jobTracker</name>
                    <value>${jobTracker}</value>
                </property>
                <property>
                    <name>nameNode</name>
                    <value>${nameNode}</value>
                </property>
                <property>
                    <name>queueName</name>
                    <value>${queueName}</value>
                </property>
                <property>
                    <name>cit_inputSrcSeqFile</name>
                    <value>${nameNode}${workingDir}/reference_extractor/reference</value>
                </property>
                <property>
                    <name>cit_inputDestSeqFile</name>
                    <value>${nameNode}${workingDir}/document_extractor/document</value>
                </property>
                <property>
                    <name>cit_outputSeqFile</name>
                    <value>${nameNode}${workingDir}/coansys/matching</value>
                </property>
            </configuration>
        </sub-workflow>
        <ok to="end"/>
        <error to="fail"/>
    </action>

    <kill name="fail">
        <message>Workflow failed</message>
    </kill>
    <end name="end"/>
</workflow-app>
