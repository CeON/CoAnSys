<workflow-app xmlns="uri:oozie:workflow:0.1" name="citation-matching-wf">
    <start to="prelude"/>
    <!--<start to="import"/>-->
    <!--<action name="import">-->
    <!--<java>-->
    <!--<job-tracker>${jobTracker}</job-tracker>-->
    <!--<name-node>${nameNode}</name-node>-->


    <!--</java>-->
    <!--<ok to="generate-indices" />-->
    <!--<error to="fail" />-->
    <!--</action>-->
    <action name="prelude">
        <fs>
            <delete path="${cit_workDir}"/>
            <mkdir path="${cit_workDir}"/>
        </fs>
        <ok to="generate-key-index"/>
        <error to="fail"/>
    </action>
    <!--
    <fork name="generate-indices">
        <path start="generate-key-index"/>
        <path start="generate-author-index"/>
    </fork>
    -->
    <action name="generate-key-index">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>pl.edu.icm.coansys.citations.jobs.IndexBuilder</main-class>
            <arg>-key</arg>
            <arg>${cit_inputSeqFile}</arg>
            <arg>${cit_keyIndexFullPath}</arg>
        </java>

        <ok to="generate-author-index"/>
        <error to="fail"/>
    </action>
    <action name="generate-author-index">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>pl.edu.icm.coansys.citations.jobs.IndexBuilder</main-class>
            <arg>-author</arg>
            <arg>${cit_inputSeqFile}</arg>
            <arg>${cit_authorIndexFullPath}</arg>
        </java>

        <ok to="do-matching"/>
        <error to="fail"/>
    </action>
    <!--
    <join name="generated-indices" to="do-matching"/>
    -->
    <action name="do-matching">
        <java>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <main-class>pl.edu.icm.coansys.citations.jobs.Matcher</main-class>
            <arg>-files</arg>
            <arg>
                ${cit_keyIndexFullPath}/data#key-data,${cit_keyIndexFullPath}/index#key-index,${cit_authorIndexFullPath}/data#author-data,${cit_authorIndexFullPath}/index#author-index
            </arg>
            <arg>${cit_keyIndex}</arg>
            <arg>${cit_authorIndex}</arg>
            <arg>${cit_inputSeqFile}</arg>
            <arg>${cit_outputSeqFile}</arg>
        </java>

        <ok to="export"/>
        <error to="fail"/>
    </action>
    <action name="export">
        <shell xmlns="uri:oozie:shell-action:0.1">
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <exec>./bulkload-sequence-file.sh</exec>
            <argument>citations-1.0-SNAPSHOT-jar-with-dependencies.jar</argument>
            <argument>bulk</argument>
            <argument>${cit_outputSeqFile}</argument>
            <argument>${cit_hbaseOutTable}</argument>
            <argument>pl.edu.icm.coansys.importers.io.writers.hbase.BytesWritableSequenceFileToHBasePutMapper</argument>
            <argument>${cit_hbaseOutColumn}</argument>
            <argument>${cit_workDir}/tmp-bulkload</argument>
            <file>./bash/bulkload-sequence-file.sh#bulkload-sequence-file.sh</file>
            <file>./lib/citations-1.0-SNAPSHOT-jar-with-dependencies.jar#citations-1.0-SNAPSHOT-jar-with-dependencies.jar</file>
        </shell>
        <ok to="end"/>
        <error to="fail"/>
    </action>
    <kill name="fail">
        <message>Workflow failed</message>
    </kill>
    <end name="end"/>
</workflow-app>
