<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>pl.edu.icm.coansys</groupId>
		<artifactId>document-similarity</artifactId>
		<version>1.10-final-SNAPSHOT</version>
	</parent>

	<artifactId>document-similarity-logic</artifactId>
	<packaging>jar</packaging>
	<name>Document Similarity Tool: Logic</name>
	<url>http://maven.apache.org</url>

	<profiles>
		<profile>
			<id>sep</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-compiler-plugin</artifactId>
						<version>2.3.2</version>
						<configuration>
							<source>1.8</source>
							<target>1.8</target>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-assembly-plugin</artifactId>
						<configuration>
							<descriptors>
								<descriptor>src/main/resources/assemblies/only-deps.xml</descriptor>
							</descriptors>
						</configuration>
						<executions>
							<execution>
								<phase>package</phase>
								<id>create-my-bundle</id>
								<goals>
									<goal>single</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<build>
		<resources>
			<resource>
				<directory>src/main/pig</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/*.pig</include>
					<include>**/*.py</include>
				</includes>
				<excludes>
					<exclude>**/macros.pig</exclude>
				</excludes>
				<targetPath>${project.build.directory}/classes/pig-main</targetPath>
			</resource>
			<resource>
				<directory>src/main/pig</directory>
				<filtering>false</filtering>
				<includes>
					<include>**/macros.pig</include>
				</includes>
				<targetPath>${project.build.directory}/classes/pig-macros</targetPath>
			</resource>
		</resources>
	</build>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>commons</artifactId>
			<version>${project.version}</version>
		</dependency>
        <!-- commons lang dependency -->
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.6</version>
        </dependency>
		<dependency>
			<groupId>org.antlr</groupId>
			<artifactId>antlr-runtime</artifactId>
			<version>3.4</version>
		</dependency>
		<dependency>
		<groupId>org.apache.oozie</groupId>
		<artifactId>oozie-client</artifactId>
		<version>4.1.0-cdh5.4.2</version>
		</dependency>
         <dependency>
            <groupId>org.apache.pig</groupId>
            <artifactId>pigunit</artifactId>
            <scope>test</scope>
        </dependency>
	</dependencies>
</project>
