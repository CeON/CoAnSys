    <start to='disambiguation'/>
    <action name='disambiguation'>
        <pig>
            <job-tracker>${jobTracker}</job-tracker>
            <name-node>${nameNode}</name-node>
            <!--<prepare>
                <delete path="${dc_m_hdfs_outputContribs}"/>
            </prepare>-->
            <configuration>
					 <!-- This is required for new api usage -->
                <property>
                    <name>mapred.mapper.new-api</name>
                    <value>true</value>
                </property>
                <property>
                    <name>mapred.reducer.new-api</name>
                    <value>true</value>
                </property>

                <!-- General job parameters -->
                <property>
                    <name>mapred.job.queue.name</name>
                    <value>${queueName}</value>
                </property>
                <property>
                    <name>hbase.zookeeper.quorum</name>
                    <value>${hbaseZookeeperQuorum}</value>
                </property>

                <!-- Job specific parameters -->
                <property>
                    <name>FEATURE_DESCRIPTION</name>
                    <value>${dc_m_str_feature_info}</value>
                </property>
                <property>
                    <name>THRESHOLD</name>
                    <value>${threshold}</value>
                </property>
                <!-- czy tu maja sie pojawic wszystkie parametry, ktore chce, zeby trafily do PIG'a? -->

            </configuration>
            <script>${pigScriptsDir}/new_disambiguation.pig</script>
        </pig>
        <ok to='end'/>
        <error to='kill'/>
    </action>

    <kill name='kill'>
        <message>Workflow failed, error message[${wf:errorMessage(wf:lastErrorNode())}]</message>
    </kill>
    <end name='end'>
        <email xmlns="uri:oozie:email-action:0.2">
            <to>mwos@icm.edu.pl</to>
            <cc>mwos@icm.edu.pl</cc>
            <subject>Email notifications for ${wf:id()}</subject>
            <body>The wf ${wf:id()} successfully completed.</body>
        </email>
	 </end>
</workflow-app>

